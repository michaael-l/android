<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/totaldist_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_total_dist"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/totaldist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/curspeed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_cur_speed"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/curspeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/label_time_elapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_elapsed"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/avgspeed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_avg_speed"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/avgspeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/fragment_layout"
        style="?buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="40" 
        android:visibility="invisible">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</merge>